extends layout
block head
    base(href='/') 
    link(rel='stylesheet', type='text/css', href='index.css')
    script(src='https://cdn.jsdelivr.net/npm/autosize@4.0.0/dist/autosize.min.js')
    script(src='https://rawgit.com/julianshapiro/velocity/master/velocity.min.js')
    script(src='jscolor.min.js')
    script(src='index.js')
block body
    .nav
      .nav-right
          if(!curUser)
              form(method="post")
                  input#username(name='username' type='text' placeholder='username')
                  input#password(name='password' type='password' placeholder='password')
                  p#login Login
                  p#register Register
          else
              button#newSquareBtn New Square
              p#userProf=curUser.username
              p#logout Logout
      .nav-left
          h3#roomName=room.name
          if(curUser)
              input#roomInput(name='roomname' type='text' placeholder='Room Name')
              a.roomInputBtn Go To Room
    .squareContainer
      .squarePrototype
          p.squareText
          button.color.jscolor(class="{valueElement:null , onFineChange:'colorUpdate(this)'}", style='display : none') Color
          textarea.squareTextEdit(style='display : none')
    
    .hintsContainer
        h1#hintHeader Hints
        if(!curUser)
            p Register to Make Squares 
        else
            p Space to Create a Square
            p C to Color Squares
            p F to Delete Squares
            p DoubleClick Squares to Add text
            p Feel Free to Move and Resize your Squares
            p WASD Move Camera
            p Q/E Zoom Out/In
